# Basic Configuration
RewriteEngine On

# Clean URLs - Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteCond %{REQUEST_URI} \.html$
RewriteRule ^(.*)\.html$ /$1 [R=301,L]

# Add .html extension internally
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Clean URLs for pages
RewriteRule ^about/?$ about/index.html [L]
RewriteRule ^blog/?$ blog/index.html [L]
RewriteRule ^faq/?$ faq/index.html [L]
RewriteRule ^privacy-policy/?$ privacy-policy/index.html [L]
RewriteRule ^terms-of-service/?$ terms-of-service/index.html [L]
RewriteRule ^cookie-policy/?$ cookie-policy/index.html [L]

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^(\.htaccess|\.git|\.env|config\.php)$">
    Require all denied
</FilesMatch>

# Set default charset
AddDefaultCharset UTF-8
